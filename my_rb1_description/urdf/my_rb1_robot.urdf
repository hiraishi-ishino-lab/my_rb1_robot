<?xml version="1.0"?>
<robot name="my_robot">
    <material name="green">
        <color rgba="0 0.5 0 1" />
    </material>

    <material name="blue_transparent">
        <color rgba="0 0 0.5 0.5" />
    </material>

    <material name="blue">
        <color rgba="0 0 0.5 1" />
    </material>


    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/Blue</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>
    <gazebo reference="back_caster">
        <material>Gazebo/Blue</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>

    <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
        <alwaysOn>true</alwaysOn>
        <updateRate>20</updateRate>
        <leftJoint>base_to_left_wheel</leftJoint>
        <rightJoint>base_to_right_wheel</rightJoint>
        <wheelSeparation>0.4</wheelSeparation>
        <wheelDiameter>0.05</wheelDiameter>
        <torque>10</torque>
        <commandTopic>cmd_vel</commandTopic>
        <odometryTopic>odom</odometryTopic>
        <odometryFrame>odom</odometryFrame>
        <robotBaseFrame>base_footprint</robotBaseFrame>
    </plugin>
    </gazebo>

    <gazebo reference="front_laser">
    <sensor type="ray" name="head_hokuyo_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize>
        <update_rate>20</update_rate>
        <ray>
            <scan>
                <horizontal>
                    <samples>720</samples>
                    <resolution>1</resolution>
                    <min_angle>-1.570796</min_angle>
                    <max_angle>1.570796</max_angle>
                </horizontal>
            </scan>
            <range>
                <min>0.20</min>
                <max>10.0</max>
                <resolution>0.01</resolution>
            </range>
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
        </ray>
        <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
            <topicName>/scan</topicName>
            <frameName>sensor_laser</frameName>
        </plugin>
    </sensor>
    </gazebo>rostopic echo /scan








  <!-- Define the base footprint as the root link -->
  <link name="base_footprint">

  </link>

  <!-- Define the base link -->
  <link name="base_link">
    <!-- Visual and collision properties for the base cylinder -->
    <visual>
      <geometry>
        <cylinder length="0.3" radius="0.25"/>
      </geometry>
       <material name="blue_transparent" />
       <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.3" radius="0.25"/>
      </geometry>
    </collision>
    <!-- Inertia properties for the base -->
    <inertial>
      <mass value="25"/>
      <inertia ixx="0.5781" ixy="0" ixz="0" iyy="0.5781" iyz="0" izz="0.7813"/>
    </inertial>
  </link>

  <!-- Define the right wheel -->
  <link name="right_wheel">
    <!-- Visual and collision properties for the wheel -->
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
    </collision>
    <!-- Inertia properties for the wheel -->
    <inertial>
      <mass value="12.5"/>
      <inertia ixx="0.004557" ixy="0" ixz="0" iyy="0.004557" iyz="0" izz="0.003906"/>
    </inertial>
  </link>

  <!-- Define the left wheel -->
  <link name="left_wheel">
    <!-- Visual and collision properties for the wheel -->
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5707 0 0" />
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>   
      </geometry>
    </collision>
    <!-- Inertia properties for the wheel -->
    <inertial>
      <mass value="12.5"/>
      <inertia ixx="0.004557" ixy="0" ixz="0" iyy="0.004557" iyz="0" izz="0.003906"/>
    </inertial>
  </link>

  <!-- Define the front caster -->
  <link name="front_caster">
    <!-- Visual and collision properties for the caster -->
    <visual>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
       <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
    <!-- Inertia properties for the caster -->
    <inertial>
      <mass value="6.25"/>
      <inertia ixx="0.002604" ixy="0" ixz="0" iyy="0.002604" iyz="0" izz="0.002604"/>
    </inertial>
  </link>

  <!-- Define the back caster -->
  <link name="back_caster">
    <!-- Visual and collision properties for the caster -->
    <visual>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
       <material name="blue" />
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
    <!-- Inertia properties for the caster -->
    <inertial>
      <mass value="6.25"/>
      <inertia ixx="0.002604" ixy="0" ixz="0" iyy="0.002604" iyz="0" izz="0.002604"/>
    </inertial>
  </link>

  <!-- Define the front laser 3.14159265359-->
  <link name="front_laser">
    <!-- Visual and collision properties for the laser -->
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
      <origin xyz="0 0 0" rpy="3.14159265359 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.15" radius="0.025"/>
      </geometry>
      <origin xyz="0 0 0" rpy="3.14159265359 0 0"/>
    </collision>
    <!-- Inertia properties for the laser -->
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00002"/>
    </inertial>
  </link>



  <!-- Define joints -->
  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 -0.15"/>
  </joint>

  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.2 -0.15"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.2 -0.15"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <joint name="base_to_front_caster" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.1 0 -0.15"/>
    <axis xyz="0 1 0"/>
    <joint_properties damping="1.0" friction="0" />
  </joint>

  <joint name="base_to_back_caster" type="fixed">
    <parent link="base_link"/>
    <child link="back_caster"/>
    <origin xyz="-0.1 0 -0.15"/>
    <axis xyz="0 1 0"/>
    <joint_properties damping="1.0" friction="0" />
  </joint>

  <joint name="base_to_front_laser" type="fixed">
    <parent link="base_link"/>
    <child link="front_laser"/>
    <origin xyz="0.25 0 0.075" rpy="3.14 0 0"/>
  </joint> 


</robot>
